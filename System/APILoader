local dir_api = "/SpeedAPI/"
local dir_api2 = "/System/API/"

-----????????? ?????-----
os.loadAPI(dir_api.."SpeedText")

local loading_api = 0.1
local sleep_before_start = 1

local list_api = fs.list(dir_api)
local list_api2 = fs.list(dir_api2)

term.setTextColor(colors.lightGray)
term.setBackgroundColor(colors.gray)
term.setCursorPos(1, 1)
term.clear()

for _, value in pairs(list_api) do
  os.unloadAPI(dir_api..value)
  if not value == "SpeedText" then
    os.loadAPI(dir_api..value)
  end
  SpeedText.cPrint("API "..value.." loaded!")
  sleep(loading_api)
  term.clear()
end

for _, value in pairs(list_api2) do
  os.unloadAPI(dir_api2..value)
  if not value == "SpeedText" then
    os.loadAPI(dir_api2..value)
  end
  SpeedText.cPrint("API "..value.." loaded!")
  sleep(loading_api)
  term.clear()
end

sleep(sleep_before_start)
SpeedText.cPrint("Done!")
sleep(0.5)
