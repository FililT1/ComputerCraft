-----------------------------------------------------------------------------------------------------------------------------------

if SpeedOS then
  SpeedOS.ToolBarColour = colours.black
  SpeedOS.ToolBarTextColour = colours.white
end

-----------------------------------------------------------------------------------------------------------------------------------

SpeedOS.LoadAPI("SpeedAPI/windows")
SpeedOS.LoadAPI("SpeedAPI/peripheral")

-----------------------------------------------------------------------------------------------------------------------------------

if not peripheral.find("modem") then
  windows.clearScreen(colors.lightBlue)
  windows.error("This program requires wireless modem!")
  SpeedOS.Close()
end

-----------------------------------------------------------------------------------------------------------------------------------

rednet.open(peripheral.find("modem"))

-----------------------------------------------------------------------------------------------------------------------------------

local _string = ""

-----------------------------------------------------------------------------------------------------------------------------------

while true do
  _string = _string.."-"
  rednet.broadcast(_string)
end

-----------------------------------------------------------------------------------------------------------------------------------