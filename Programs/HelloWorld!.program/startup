-----------------------------------------------------------------------------------------------------------------------------------
-- Меняем цвет верхнего тулбара

if SpeedOS then
  SpeedOS.ToolBarColour = colours.black
  SpeedOS.ToolBarTextColour = colours.white
end

-----------------------------------------------------------------------------------------------------------------------------------
-- Подгружаем АПИ

SpeedOS.LoadAPI("SpeedAPI/SpeedText")

-----------------------------------------------------------------------------------------------------------------------------------
-- Распечатка надписи "Hello World!"

term.setTextColor(2 ^ math.random(0, 15))
SpeedText.slowPrint("Hello World!")

-----------------------------------------------------------------------------------------------------------------------------------
-- Ждем, пока пользователь кликнет на кнопку или нажмет на кнопку и закрываем программу

SpeedText.waitForEvent({"mouse_click", "mouse_drag", "mouse_scroll", "key"})
SpeedOS.Close()

-----------------------------------------------------------------------------------------------------------------------------------