SpeedOS.ToolBarColour = colours.black
SpeedOS.ToolBarTextColour = colours.white

SpeedOS.LoadAPI("SpeedAPI/peripheral")
SpeedOS.LoadAPI("SpeedAPI/windows")
SpeedOS.LoadAPI("SpeedAPI/config")
SpeedOS.LoadAPI("SpeedAPI/SpeedText")

log_file = fs.open("Resources/Chat.log", "a")

if not peripheral.find("adventure map interface", true) then
	windows.clearScreen(colors.white)
	windows.error("You need adventure map interface!")
	SpeedOS.Close()
end

huy = config.read("System/IRC.settings", "blacklist")
local blacklist = textutils.unserialize(huy)

function Blacklist(name)
	for _, _name in pairs(blacklist) do
		if _name == name then
			return false
		end
	end
	return true
end

p = peripheral.wrap(peripheral.find("adventure map interface", true))

term.setTextColor(colors.lightGray)
io.write("TechWorld ")
term.setTextColor(colors.cyan)
print(" #IRC")

while true do
	event, user, msg = os.pullEvent()

	if event == "chat_message" then
		term.setTextColor(colors.orange)
		io.write("<")
		term.setTextColor(colors.cyan)
		io.write("G")
		term.setTextColor(colors.orange)
		io.write("> ")
		term.setTextColor(colors.lightGray)
		io.write(user)
		term.setTextColor(colors.white)
		print(": "..msg)
		log_file.writeLine("["..SpeedText.time_and_date().."] "..user..": "..msg)
		log_file.flush()
	elseif event == "player_login" then
		term.setTextColor(colors.orange)
		io.write("<")
		term.setTextColor(colors.cyan)
		io.write("G")
		term.setTextColor(colors.orange)
		io.write("> ")
		term.setTextColor(colors.lightGray)
		io.write(user)
		term.setTextColor(colors.lime)
		print(" joined the game")
		log_file.writeLine("["..SpeedText.time_and_date().."] "..user.." joined the game")
	elseif event == "player_logout" then
		term.setTextColor(colors.orange)
		io.write("<")
		term.setTextColor(colors.cyan)
		io.write("G")
		term.setTextColor(colors.orange)
		io.write("> ")
		term.setTextColor(colors.lightGray)
		io.write(user)
		term.setTextColor(colors.red)
		print(" left the game")
		log_file.writeLine("["..SpeedText.time_and_date().."] "..user.." left the game")
		log_file.flush()
	elseif event == "player_respawn" then
		term.setTextColor(colors.orange)
		io.write("<")
		term.setTextColor(colors.cyan)
		io.write("G")
		term.setTextColor(colors.orange)
		io.write("> ")
		term.setTextColor(colors.lightGray)
		io.write(user)
		term.setTextColor(colors.lightBlue)
		print(" respawned")
		log_file.writeLine("["..SpeedText.time_and_date().."] "..user.." respawned")
		log_file.flush()
	elseif event == "player_change_world" then
		term.setTextColor(colors.orange)
		io.write("<")
		term.setTextColor(colors.cyan)
		io.write("G")
		term.setTextColor(colors.orange)
		io.write("> ")
		term.setTextColor(colors.lightGray)
		io.write(user)
		term.setTextColor(colors.purple)
		print(" changed world")
		log_file.writeLine("["..SpeedText.time_and_date().."] "..user.." changed world")
		log_file.flush()
	elseif event == "char" then
		term.setTextColor(colors.lightGray)
		io.write("> ")
		term.setTextColor(colors.white)
		msg2 = io.read()

		if msg2 == "/exit" or msg2 == "/quit" then
			log_file.close()
			SpeedOS.Close()
		else
		for _, value in pairs(p.getPlayerUsernames()) do
			pl = p.getPlayerByName(value)

			if Blacklist(value) then
				pl.sendChat("[Computer #"..os.getComputerID().."] "..msg2)
			end
		end
		log_file.writeLine("["..SpeedText.time_and_date().."] #"..os.getComputerID().." sended from IRC: "..msg2)
		log_file.flush()
		end
	end

end
