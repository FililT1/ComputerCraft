-----------------------------------------------------------------------------------------------------------------------------------
-- Меняем цвет верхнего тулбара

if SpeedOS then
	SpeedOS.ToolBarColour = colours.black
	SpeedOS.ToolBarTextColour = colours.white
end

-----------------------------------------------------------------------------------------------------------------------------------
-- Подгружаем АПИ для работы программы

SpeedOS.LoadAPI("SpeedAPI/SpeedText")
SpeedOS.LoadAPI("SpeedAPI/windows")

-----------------------------------------------------------------------------------------------------------------------------------
-- Чистим экран в ЧОООООООРНЫЙ цвет и курсорируем на координаты старта отрисовки

windows.clearScreen(colors.black)
term.setCursorPos(1, 1)

-----------------------------------------------------------------------------------------------------------------------------------
-- Некий заголовок статистики. Хуйня короче

SpeedText.cPrint("Computer statistics", 1) -- НУ И КТО ГОВОРИЛ ЧТО МОЕ АПИ ЭТО ПОЛНАЯ ХУЕТА???
SpeedText.line() -- ТАК ЭТО Ж ИДИОМА!

-----------------------------------------------------------------------------------------------------------------------------------
-- Пишем статистику, причем не приблизительную, как всякие ваши Опенфетчи, а точную!!

print("Your computer ID: ", os.getComputerID())
print("Computer label: ", os.getComputerLabel())
print("Free space: "..tostring(SpeedOS.FS.getFreeSpace("/")).." bytes")
print("Computer running: ", os.clock(), " seconds")

if SpeedOS.FS.exists("disk") then
	print("Disk free space: "..tostring(SpeedOS.FS.getFreeSpace("/disk").." bytes"))
end

-----------------------------------------------------------------------------------------------------------------------------------
-- Ну короче иди нахуй

print("\nPress any key to quit.")

SpeedText.waitForEvent({"mouse_click", "mouse_drag", "mouse_scroll", "key"})
SpeedOS.Close()

-----------------------------------------------------------------------------------------------------------------------------------