os.loadAPI("loader")
SpeedOS = loader.OS()

SpeedOS.ToolBarColour = colours.black
SpeedOS.ToolBarTextColour = colours.white

SpeedOS.LoadAPI("SpeedAPI/SpeedText")
SpeedOS.LoadAPI("SpeedAPI/config")

pathToConfig = "System/Offer.settings"

markdown = config.read(pathToConfig, "markdown")

if markdown == "true" then
	shell.run("Resources/offerGenerator.lua --enable-markdown Resources/tmp")
else
	shell.run("Resources/offerGenerator.lua Resources/tmp")
end

SpeedText.waitForEvent({"mouse_click", "mouse_drag", "mouse_scroll", "key"})
