os.loadAPI("/SpeedAPI/peripheral")

local cb = peripheral.wrap(peripheral.find("command"))

term.setTextColor(colors.lightGray)
term.setBackgroundColor(colors.white)
term.clear()
term.setCursorPos(1, 19)

if cb.getCommand() then
  cb.setCommand("")
end

while true do
  --paintutils.drawLine(1, 20, 51, 20, colors.lightGray)
  term.setBackgroundColor(colors.white)
  term.setTextColor(colors.black)
  io.write("> ")
  --paintutils.drawLine(1, 18, 51, 18, colors.lightGray)
  term.setBackgroundColor(colors.white)
  term.setTextColor(colors.lightGray)
  command = io.read()
  cb.setCommand(tostring(command))
  cb.setCommand("")
--  cb.runCommand()
end
