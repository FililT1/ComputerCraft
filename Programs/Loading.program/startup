os.loadAPI("loader")
SpeedOS = loader.OS()

SpeedOS.ToolBarColour = colours.lightGrey
SpeedOS.ToolBarTextColour = colours.white

SpeedOS.LoadAPI("SpeedAPI/SpeedText")
SpeedOS.LoadAPI("SpeedAPI/config")

pathToConfig = "System/Loading.settings"

local old = os.pullEvent
os.pullEvent = os.pullEventRaw

huy_ = config.read(pathToConfig, "splashes")
local splash = textutils.unserialize(huy_)

local col
if term.isColor() then
    col = {
        bg = colors.white,
        toload = colors.gray,
        loaded = colors.lightBlue,
        text = colors.lightGray,
    }
else
    col = {
        bg = colors.white,
        toload = colors.gray,
        loaded = colors.lightGray,
        text = colors.lightGray,
    }
end

term.setBackgroundColor(col.bg)
term.clear()
term.setCursorPos(1,1)
local w,h = term.getSize()

local function writeC(txt)
    _,y = term.getCursorPos()
    term.setCursorPos(math.ceil(w/2)-math.ceil(#txt/2),y)
    write(txt)
end
local tottim = 0
local dead = false
parallel.waitForAny(function()
    while true do
        for i = 0,3 do
            term.setCursorPos(1,7)
            term.setTextColor(col.text)
            term.setBackgroundColor(col.bg)
            term.clearLine()
            writeC("Loading")
            write(string.rep(".",i))
            sleep(0.5)
        end
    end
end,function()
    paintutils.drawLine(3,math.ceil(h/2),w-2,math.ceil(h/2),col.toload)
    for i = 0,w-5 do
        paintutils.drawPixel(i+3,math.ceil(h/2),col.loaded)
        local tim = math.random(1,100)/10
        sleep(tim)
    end
end,function()
    while true do
        sleep(0.1)
        tottim = tottim+0.1
    end
end,function()
    while true do
        local choice = splash[math.random(1,#splash)]
        term.setCursorPos(1,math.ceil(h/2)+2)
        term.setBackgroundColor(col.bg)
        term.setTextColor(col.text)
        term.clearLine()
        writeC(choice)
        sleep(5)
    end
end,function()
    while true do
        local ev = os.pullEventRaw()
        if ev == "terminate" or ev == "mouse_click" or ev == "mouse_drag" or ev == "mouse_scroll" or ev == "key" then
            dead = true
            break
        end
    end
end)
os.pullEvent = old
term.setBackgroundColor(colors.black)
term.setCursorPos(1,1)
term.setTextColor(colors.white)
term.clear()
if dead then
    print("You gave up at "..tottim.." seconds of loading!")
else
    print("You survived "..tottim.." seconds of loading!")
end
print("")
print("Created by Ale32bit")

SpeedText.waitForEvent({"mouse_click", "mouse_drag", "mouse_scroll", "key"})
SpeedOS.Close()
