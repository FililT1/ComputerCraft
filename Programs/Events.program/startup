-----------------------------------------------------------------------------------------------------------------------------------
-- Меняем цвет верхнего тулбара

if SpeedOS then
  SpeedOS.ToolBarColour = colours.lightGrey
  SpeedOS.ToolBarTextColour = colours.white
end

-----------------------------------------------------------------------------------------------------------------------------------
-- Подгружаем АПИ для программы

SpeedOS.LoadAPI("SpeedAPI/SpeedText")
SpeedOS.LoadAPI("SpeedAPI/windows")
SpeedOS.LoadAPI("SpeedAPI/config")

-----------------------------------------------------------------------------------------------------------------------------------
-- Ну бляэ аывлщващывшвш ну ээээ

local pathToConfig = "System/Events.settings"

-----------------------------------------------------------------------------------------------------------------------------------
-- Всякая визуальная инициализация программы

windows.clearScreen(colors.gray)
term.setCursorPos(1, 1)
term.setTextColor(colors.white)

-----------------------------------------------------------------------------------------------------------------------------------
-- Цикл обработки действий пользователя(и не только)

while true do  
  local event, p1, p2, p3, p4, p5, p6, p7 = os.pullEvent()
    
  if event and skip(event) then
    print(event.." event has happened")
    print("Info: ")

    if p1 then
      print(p1)
    end

    if p2 then
      print(p2)
    end

    if p3 then
      print(p3)
    end

    if p4 then
      print(p4)
    end

    if p5 then
      print(p5)
    end

    if p6 then
      print(p6)
    end

    if p7 then
      print(p7)
    end

    term.setTextColor(colors.lightGray)
    SpeedText.line()
    term.setTextColor(colors.white)
  end
end

-----------------------------------------------------------------------------------------------------------------------------------