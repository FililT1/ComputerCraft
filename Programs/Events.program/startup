os.loadAPI("loader")
SpeedOS = loader.OS()

SpeedOS.LoadAPI("SpeedAPI/SpeedText")
SpeedOS.LoadAPI("SpeedAPI/windows")

SpeedOS.ToolBarColour = colours.lightGrey
SpeedOS.ToolBarTextColour = colours.white

windows.clearScreen(colors.gray)
term.setCursorPos(1, 1)

term.setTextColor(colors.white)

while true do  
  local event, character, p1, p2, p3, p4, p5, p6 = os.pullEvent()
  if event == "char" then
    print(character.." was pressed")
    
    term.setTextColor(colors.lightGray)
    SpeedText.line()
    term.setTextColor(colors.white)
           
  elseif event == "mouse_click" then
    print(character.." was pressed on mouse")
    
    term.setTextColor(colors.lightGray)
    SpeedText.line()
    term.setTextColor(colors.white)
  
  elseif event == "mouse_scroll" then
    print("Scrolling mouse "..character)
    
    term.setTextColor(colors.lightGray)
    SpeedText.line()
    term.setTextColor(colors.white)
  
  elseif event == "key" then
    print("ID of key is "..character)
    
  else 
    print(event.." event has happened")
    print("Info: ")
    if character then
      print(character)
    end

    if p1 then
      print(p1)
    end

    if p2 then
      print(p1)
    end

    if p3 then
      print(p1)
    end

    if p4 then
      print(p1)
    end

    if p5 then
      print(p1)
    end

    if p6 then
      print(p1)
    end

    term.setTextColor(colors.lightGray)
    SpeedText.line()
    term.setTextColor(colors.white)
  end
end
