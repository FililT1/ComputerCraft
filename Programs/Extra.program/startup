os.loadAPI("loader")
SpeedOS = loader.OS()

SpeedOS.ToolBarColour = colours.black
SpeedOS.ToolBarTextColour = colours.white

print("Press Enter to start the Pizdec")
print("Place a redstone torch next to right redstone dust.")
os.pullEvent("key")

while true do
  if rs.getInput("back", false) then
    rs.setOutput("back", true)
  end
  
  if rs.getInput("right", true)  then
    rs.setOutput("front", true)
    rs.setOutput("left", false)
  end

  if rs.getInput("right", false) then
    rs.setOutput("left", true)
  end
end
