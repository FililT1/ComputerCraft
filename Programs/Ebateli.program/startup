os.loadAPI("loader")
SpeedOS = loader.OS()

SpeedOS.ToolBarColour = colours.lightGrey
SpeedOS.ToolBarTextColour = colours.white

SpeedOS.LoadAPI("System/API/Drawing")
SpeedOS.LoadAPI("SpeedAPI/SpeedText")

-- intro

SpeedText.cPrint("This is a little .nft images demonstration", 8)
sleep(2)
SpeedText.cPrint("Press any key to continue...", 10)

os.pullEvent("key")

-- animation

local picsDir = "Programs/Ebateli.program/Resources"
local kadr = 1

while true do
  event, key = os.pullEvent()
  
  if event == "key" and key == keys.right then
    if kadr < 4 then
      kadr = kadr + 1
    else
      kadr = 1
    end
  elseif event == "key" and key == keys.left then
    if kadr > 1 then
      kadr = kadr - 1
    else
      kadr = 4
    end
  end
  
  Drawing.DrawImage(1, 1, Drawing.LoadImage(picsDir.."/"..tostring(kadr)..".nft"), 51, 18)
  Drawing.DrawBuffer()
  
end

